{{!< default}}

{{#post}}
<article class="gh-article {{post_class}}">

    {{#if @page.show_title_and_feature_image}}
        {{#if feature_image}}
            <div class="gh-post-thumbnail">
                <img class="cover"
                     srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                     sizes="(max-width: 1000px) 400px, 700px"
                     src="{{img_url feature_image size="m"}}"
                     alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
                {{#if feature_image_caption}}
                    <figcaption class="gh-feature-image-caption">{{feature_image_caption}}</figcaption>
                {{/if}}
            </div>
        {{/if}}
    {{else}}
        {{#if feature_image}}
            <div class="gh-post-thumbnail">
                <img class="cover"
                     srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                     sizes="(max-width: 1000px) 400px, 700px"
                     src="{{img_url feature_image size="m"}}"
                     alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
                {{#if feature_image_caption}}
                    <figcaption class="gh-feature-image-caption">{{feature_image_caption}}</figcaption>
                {{/if}}
            </div>
        {{/if}}
    {{/if}}

    <header class="gh-header gh-canvas">
        {{#if @page.show_title_and_feature_image}}
            <h1 class="gh-title">{{title}}</h1>
        {{else}}
            <h1 class="gh-title">{{title}}</h1>
        {{/if}}

        {{#if custom_excerpt}}
            <p class="gh-excerpt">{{custom_excerpt}}</p>
        {{/if}}

        {{#if published_at}}
            <span class="gh-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                {{#if reading_time}}
                    <span class="bull">&bull;</span> {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}
                {{/if}}
                {{#if primary_author}}
                    <span class="bull">&bull;</span> {{t "Written by"}}
                    {{#foreach authors}}
                        <a href="{{url}}">{{name}}</a>{{/foreach}}
                {{/if}}
            </span>
        {{/if}}
    </header>

    <div class="gh-content gh-canvas">
        {{content}}
    </div>

    {{#if tags}}
        <p class="gh-excerpt">
            {{tags prefix=(t "Tags: ")}}
        </p>
    {{/if}}

</article>

{{#if comments}}
    <footer class="gh-footer gh-canvas">
        <section class="gh-post-comments">
            <h2>
                {{t "Comments"}}
                <small>({{comment_count singular="" plural="" empty="0"}})</small>
            </h2>
            {{comments mode="dark" count=false title="" }}
        </section>
    </footer>
{{/if}}

{{/post}}
